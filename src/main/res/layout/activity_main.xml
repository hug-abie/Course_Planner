<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button3"
        android:layout_width="238dp"
        android:layout_height="51dp"
        android:gravity="center_horizontal"
        android:onClick="buttonClicked"
        android:text="List All Courses"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/weightbox2"
        android:layout_width="290dp"
        android:layout_height="53dp"
        android:ems="10"
        android:hint="Enter the course code"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        tools:layout_editor_absoluteX="14dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="96dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:onClick="buttonClicked2"
        android:text="Search"
        app:layout_constraintBottom_toTopOf="@+id/scrollView4"
        app:layout_constraintStart_toEndOf="@+id/weightbox2" />

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="426dp"
        android:layout_height="633dp"
        app:layout_constraintTop_toBottomOf="@+id/weightbox2"
        tools:layout_editor_absoluteX="-1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/answer2"
                android:layout_width="390dp"
                android:layout_height="877dp"
                android:layout_marginTop="56dp"
                android:background="#70A7D6EC"
                android:gravity="top|left"
                android:textColor="@color/purple_500"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>